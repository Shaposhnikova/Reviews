<?xml version="1.0" ?>

<config>
    <modules>
        <Sasha_Reviews>
            <version>0.0.1</version>
        </Sasha_Reviews>
    </modules>
    <global>
        <models>
            <reviews>
                <class>Sasha_Reviews_Model</class>
                <resourceModel>reviews_resource</resourceModel>
            </reviews>
            <reviews_resource>
                <class>Sasha_Reviews_Model_Resource</class>
                <entities>
                    <reviews_table>
                        <table>reviews</table>
                    </reviews_table>
                </entities>
            </reviews_resource>
        </models>
        <resources>
            <sasha_reviews_setup>
                <setup>
                    <module>Sasha_Reviews</module>
                </setup>
            </sasha_reviews_setup>
        </resources>
    </global>
    <frontend>
        <routers>
            <opinion>
                <use>standard</use>
                <args>
                    <module>Sasha_Reviews</module>
                    <frontName>sasha_reviews</frontName>
                </args>
            </opinion>
        </routers>
    </frontend>
</config>

